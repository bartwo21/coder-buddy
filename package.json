{
  "name": "coder-buddy",
  "displayName": "coder_buddy",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:aiCompanion.sidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "aiCompanion.sidebar",
          "name": "Coder Buddy",
          "type": "webview"
        }
      ]
    },
    "commands": []
  },
  "scripts": {
    "vscode:prepublish": "npm run build:webview && npm run compile",
    "build:webview": "npm --prefix webview-ui run build",
    "dev:all": "npm run build:webview && concurrently -n webview,ext -c magenta,cyan \"npm --prefix webview-ui run build:watch\" \"npm run watch\"",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "concurrently": "^9.1.2",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}